<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_hom_toutiao"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="头条"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/huise"
                />

            <TextView
                android:id="@+id/tv_hom_shehui"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="社会"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/huise"
                />
            <TextView
                android:id="@+id/tv_hom_guonei"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="国内"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/huise"
                />
            <TextView
                android:id="@+id/tv_hom_guoji"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="国际"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/huise"
                />
            <TextView
                android:id="@+id/tv_hom_yule"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="娱乐"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/huise"
                />
            <TextView
                android:id="@+id/tv_hom_tieyu"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="体育"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/huise"
                />
            <TextView
                android:id="@+id/tv_hom_junshi"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="军事"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/huise"
                />
            <TextView
                android:id="@+id/tv_hom_keji"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="科技"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/huise"
                />
            <TextView
                android:id="@+id/tv_hom_caijin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="财经"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/huise"
                />
            <TextView
                android:id="@+id/tv_hom_shishang"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="时尚"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/huise"
                />

        </LinearLayout>

    </HorizontalScrollView>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_hom_pag"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:background="@color/white"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>